@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2 class="heading">@ViewData["Title"]</h2>
<p class="action-description">Use a local account to log in.</p>

<div class="row">
    <div class="col-md-4">
        <form id="login-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label class="form-label" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check pt-2 d-flex align-items-center">
                <input asp-for="Input.RememberMe" class="form-check-input">
                <label asp-for="Input.RememberMe" class="form-check-label">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
